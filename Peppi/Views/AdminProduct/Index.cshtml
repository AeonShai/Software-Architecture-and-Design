@using PagedList;
@using PagedList.Mvc
@model IPagedList<EntitiesLayer.Entities.Product>
@{
	ViewBag.Title = "Index";
}

<link rel="stylesheet" href="/Content/Styles/AdminTable.css">

<a href="/AdminProduct/Create" class="btn btn-primary">Ekle</a>
<table>
	<tr>
		<th>Ad</th>
		<th>Açıklama</th>
		<th>Fiyat</th>
		<th>Stok</th>
		<th>Resim</th>
		<th>Kategori</th>
		<th>Sil</th>
		<th>Güncelle</th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.Name</td>
			<td>@item.Description</td>
			<td>@item.Price</td>
			<td>@item.Stock</td>
			<td>
				<img src="/Content/Image/@item.Image" width="100" height="100" alt="Resim" />
			</td>
			<td>@item.Category.Name</td>
			<td>
				@Html.ActionLink("Sil", "Delete", new { item.Id }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek istediğinize emin misiniz?')" })
			</td>
			<td>
				<a class="btn btn-primary" href="/AdminProduct/Update/@item.Id">Güncelle</a>
			</td>
		</tr>
	}
</table>

@Html.PagedListPager(Model, sayfa=>Url.Action("Index", new{sayfa}),PagedListRenderOptions.Classic)