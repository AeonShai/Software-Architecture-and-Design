<style>
    .category-item {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
        border-bottom: 1px solid #eee;
        padding-bottom: 10px;
    }

    .category-item a {
        color: #337ab7;
        text-decoration: none;
        display: flex;
        align-items: center;
        width: 100%;
    }

    .category-item .box {
        background-color: #f9f9f9;
        padding: 5px;
        border-radius: 50%;
        margin-right: 10px;
        width: 20px;
        height: 20px;
    }

    .category-item .category-name {
        font-size: 16px;
        font-weight: 500;
    }

    .category-item .product-count {
        background-color: #f9f9f9;
        padding: 5px 10px;
        border-radius: 15px;
        font-size: 14px;
        color: #777;
        margin-left: 150px;
    }
</style>

<div class="col-sm-3" style="margin-top:30px">
	<div class="left-sidebar">
		<div class="brands_products">
			<h2 style="text-align: center; color: #333; font-weight: bold;">KATEGORİLER</h2>
			<div class="brands-name">
				<ul class="nav nav-pills nav-stacked">
					@foreach (var item in Model)
					{
						<li class="category-item">
							<a href="/Category/Details/@item.Id">
								
								<span class="category-name">@item.Name </span>
                                
								<span class="product-count pull"> (@item.Products.Count)</span>
							</a>
						</li>
					}
				</ul>
			</div>
		</div>
	</div>
</div>