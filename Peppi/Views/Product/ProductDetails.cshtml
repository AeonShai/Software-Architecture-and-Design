@model EntitiesLayer.Entities.Product
@{
    ViewBag.Title = "ProductDetails";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="row">
    @Html.Action("CategoryList", "Category")

    <div class="col-sm-9 padding-right">
        <div class="product-details card mb-4 shadow-sm">
            <div class="row no-gutters">
                <div class="col-md-5">
                    <div class="view-product">
                        <img src="~/Content/Image/@Model.Image" class="card-img" alt="@Model.Name" />
                    </div>
                </div>
                <div class="col-md-7">
                    <div class="card-body">
                        <h2 class="card-title">Ürün Adı: @Model.Name</h2>
                        <span>
                            <span class="h3">@Model.Price TL</span>
                            <a class="btn btn-primary btn-lg btn-block mt-3" href="/Cart/AddCart/@Model.Id">
                                <i class="fa fa-shopping-cart"></i> Sepete Ekle
                            </a>
                        </span>
                        <p class="card-text mt-3"><b>Kategori:</b> @Model.Category.Name</p>
                        <p class="card-text"><b>Stok:</b> @Model.Stock</p>
                        <p class="card-text"><b>Açıklama:</b> @Model.Description</p>
                        <button type="button" class="btn btn-secondary mt-4" data-toggle="modal" data-target="#exampleModal">
                            Yorum Yap
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form method="post" action="/Product/Comment">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Yorum Yazınız</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <textarea class="form-control" name="Icerik" placeholder="Yorum Yazınız..."></textarea>
                            <input type="hidden" name="ProductId" value="@Model.Id" />
                            <input type="hidden" name="UserId" value="@Session["userid"]" />
                            <input type="hidden" name="Date" value="@DateTime.Now" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                            <button type="submit" class="btn btn-primary">Gönder</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <hr />
       
    </div>
</div>

<style>
    .view-product img {
        width: 100%;
        height: auto;
        margin-top: 20px;
    }

    .product-details {
        background: #fff;
        border-radius: 5px;
        padding: 15px;
    }

        .product-details .card-body {
            padding: 15px;
        }

        .product-details .card-title {
            font-size: 1.5rem;
        }

    .comments-section .comment {
        background: #f9f9f9;
    }
</style>
